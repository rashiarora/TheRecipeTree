<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewCuisines"
        android:background="@drawable/indian"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dip"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cuisine Type"
        android:textSize="15sp"
        android:textColor="@color/bright_foreground_material_light"
        android:textStyle="bold"
        android:id="@+id/textViewCuisine"
        android:textAlignment="gravity"
        android:layout_alignTop="@+id/imageViewCuisines"
        android:layout_toRightOf="@+id/imageViewCuisines"
        android:layout_toEndOf="@+id/imageViewCuisines"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageViewMark"
        android:layout_toRightOf="@+id/textViewCuisine"
        android:layout_toEndOf="@+id/textViewCuisine"
        android:layout_alignTop="@+id/textViewCuisine"
        android:layout_marginLeft="15dp"/>
</RelativeLayout>